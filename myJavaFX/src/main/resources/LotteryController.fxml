<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.TilePane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.LotteryController">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>
    <center>
        <GridPane vgap="10" hgap="10">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="期数："/>
            <ComboBox GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="comboBox"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="2" text="查询结果" prefHeight="64" onAction="#selectButtonClick"/>
<!--
            <TextArea GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false" wrapText="true"
                      prefRowCount="6" prefColumnCount="16" fx:id="contentTextArea"/>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="2" fx:id="contentTextField"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0" fx:id="contentTextLabel"/>-->

        </GridPane>
        <TilePane>

            <TextArea editable="false" wrapText="true"
                      prefRowCount="6" prefColumnCount="16" fx:id="contentTextArea"/>
            <TextField fx:id="contentTextField"/>
            <Label fx:id="contentTextLabel"/>
        </TilePane>
    </center>

    <bottom>
        <Button text="Close" prefHeight="64" fx:id="closeButton" onAction="#closeButtonClick"/>
    </bottom>
</BorderPane>