<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>

<GridPane vgap="10" hgap="10" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.controller.MyController">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="0" text="Select file" prefHeight="64" fx:id="selectButton"
            onAction="#selectButtonClick"/>

    <TextArea GridPane.rowIndex="1" GridPane.columnIndex="0" editable="false" wrapText="true" fx:id="fileContentTextArea"/>

    <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="Close" prefHeight="64" fx:id="closeButton"
            onAction="#closeButtonClick"/>
</GridPane>