<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.fx.SampleController" stylesheets="@css/common.css" styleClass="border-pane">
    <left>
        <FlowPane vgap="20" hgap="20" orientation="VERTICAL">
            <padding>
                <Insets topRightBottomLeft="20"/>
            </padding>
            <Button text="File Processing" prefHeight="32" onAction="#fileDigestButtonClick"/>
            <Button text="Base64 Processing" prefHeight="32" onAction="#base64ButtonClick"/>
        </FlowPane>
    </left>

    <bottom>
        <Button text="Close" prefHeight="64" fx:id="closeButton" onAction="#closeButtonClick"/>
    </bottom>
</BorderPane>